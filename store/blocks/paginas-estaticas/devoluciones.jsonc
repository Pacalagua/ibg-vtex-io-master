    "props": {
      "text": "#### Políticas de despacho",
      "blockClass": "title-landing",
      "fullWidth": true,
      "width": "100%"
    }
  },

  "rich-text#compra": {
    "props": {
      "text": "321 255 1297 Nuestros tiempos de entrega son: 6 a 10 días en ciudades principales e intermedias y de 10 a 12 días en ciudades apartadas.",
