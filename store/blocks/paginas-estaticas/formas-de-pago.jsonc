        "props": {
            "blockClass": "imgs-estatica"
            /* "marginTop": 3 */
        },
        "children": [
            "image#bancolombia"
        ]
    },
    "image#bancolombia": {
        "props": {
            "maxHeight": 45,
            "src": "assets/images/logo-bancolombia.svg"
        }
    },
    "rich-text#pagos-bancolombia-texto": {
        "props": {
            "text": "Con el botón Bancolombia puedes pagar a través de trasferencia bancaria fácil y seguro.",
            "blockClass": "text-info"
        }
    },
    "rich-text#pagos-addi-titulo": {
        "props": {
            "text": "PAGOS A CRÉDITO:",
            "blockClass": "title-blue"
        }
    },
    "flex-layout.row#imagenes-pago-addi": {
        "props": {
            "blockClass": "imgs-estatica"
